//////////////////////////////////////////////////////////////////////

Protester::Protester(int imageID, int startX, int startY, Direction dir, double size, unsigned int depth, StudentWorld* world, double health)
	: Person(IID_PROTESTER, 60, 60, left, 1.0, 0, world, 5.0)
{
	resetTravelDistance();
	resetWaitTicks();
	resetShoutTicks();
	turningTicks = 0;
	m_state = "active";
}

Protester::~Protester()
{}

void Protester::doSomething()
{
	Direction dir = getDirection();
	if (!isAlive())
		return;
	if (m_state == "resting")
	{
		waitingTicks--;
		if (waitingTicks <= 0)
			m_state = "active";
	}
	if (m_state == "dead end")
	{
		travelDistance = 0;
		m_state = "active";
		return;
	}
	if (m_state == "active")
	{
		if (getWorld()->canShout(this, getDirection()) && shoutingTicks <= 0) //if Protester is next to Frackman and is ready to shout
		{
			cout << "shout" << endl;
			getWorld()->frackOff(this);
			resetShoutTicks();
		}
		else if (getWorld()->hasLineOfSight(this) != none) //else if Protester cant shout, but still has line of sight
		{
			cout << "spotted" << endl;
			travelDistance = 0;
			moveTowardPlayer(getWorld()->hasLineOfSight(this));
		}
		else if (travelDistance <= 0)
			{
				cout << "set new direction" << endl;
				setDirection(getNewDirection());
				resetTravelDistance();
				moveInDirection(getDirection());
			}
		else if (canTurn(getDirection()) && getTurnTicks() <= 0)
			{
				cout << "turn" << endl;
				setDirection(turns());
				resetTravelDistance();
				resetTurnTicks();
				moveInDirection(getDirection());
			}
		else if (!getWorld()->pathValid(this, getDirection()))
		{
			cout << "dead end" << endl;
			m_state = "dead end";
		}
		else
		{
			cout << "move" << endl;
			moveInDirection(dir);
		}
		shoutingTicks--;
		turningTicks--;
		resetWaitTicks();
		if (m_state != "dead end")
			m_state = "resting";
	}
}

void Protester::getAnnoyed()
{
	if (m_state == "give up")
	{
		return;
	}
	loseHealth(2);
	if (isAlive())
	{
		getWorld()->playSound(SOUND_PROTESTER_ANNOYED);		
		m_state = "resting";
		waitingTicks = max(50, 100 - (static_cast<int>(getWorld()->getLevel()) / 4));
	}
	else
	{
		m_state = "give up";
		getWorld()->playSound(SOUND_PROTESTER_GIVE_UP);

	}
}

void Protester::loseHealth(double health)
{}

int Protester::getShoutTicks()
{
	return shoutingTicks;
}

int Protester::getTurnTicks()
{
	return turningTicks;
}

void Protester::resetWaitTicks()
{
	waitingTicks = max(0, 3 - (static_cast<int>(getWorld()->getLevel()) / 4));
}

void Protester::resetShoutTicks()
{
	shoutingTicks = 15;
}

void Protester::resetTurnTicks()
{
	turningTicks = 200;
}

void Protester::resetTravelDistance()
{
	travelDistance = rand() % 52 + 8;
}

void Protester::moveTowardPlayer(Direction dir)
{
	if (dir == getDirection())
		moveInDirection(dir);
	else
	{
		setDirection(dir);
		moveInDirection(dir);
	}
}

bool Protester::canTurn(Direction dir)
{
	switch (dir)
	{
	case left:
	case right:
		if (getWorld()->pathValid(this, up) || getWorld()->pathValid(this, down))
		{
			return true;
		}
	case up:
	case down:
		if (getWorld()->pathValid(this, left) || getWorld()->pathValid(this, right))
		{
			cout << "can turn" << endl;
			return true;
		}
	default:
		cout << "cant turn" << endl;
		return false;
	}
}

GraphObject::Direction Protester::turns()
{
	Direction dir = getDirection();
	switch (dir)
	{
	case left:
	case right:
		if (getWorld()->pathValid(this, up) && getWorld()->pathValid(this, down))
		{
			int random = rand() % 1;
			if (random == 0)
				return up;
			return down;
		}
		else if (getWorld()->pathValid(this, up) && !getWorld()->pathValid(this, down))
			return up;
		else
			return down;
	case up:
	case down:
		if (getWorld()->pathValid(this, left) && getWorld()->pathValid(this, right))
		{
			int random = rand() % 1;
			if (random == 0)
				return left;
			return right;
		}
			else if (getWorld()->pathValid(this, left) && !getWorld()->pathValid(this, right))
				return left;
			else
				return right;
	default:
		cout << dir << endl;
		return dir;
	}
}

GraphObject::Direction Protester::getNewDirection()
{
	int random = rand() % 3 + 1;
	if (random == 1 && getWorld()->pathValid(this, left))
	{
		return left;
	}
	if (random == 1 && getWorld()->pathValid(this, right))
	{
		return right;
	}
	if (random == 2 && getWorld()->pathValid(this, up))
	{
		return up;
	}
	if (random == 3 && getWorld()->pathValid(this, down))
	{
		return down;
	}
	else
		return getNewDirection();
}
